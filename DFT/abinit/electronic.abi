outdata_prefix "./out/electronic"
ndtset      3
nstep       200

# In order to use this ground state for the
# following response function computation, we
# must require well-converged wave functions
tolwfr      1e-18

# Suppress some unused outputs
prtebands   0
prtden      0
prtgsr      0
prtkden     0
prtwf       0

# Crystal structure
ntypat      1
znucl       41
pseudos     "Nb.psp8"
pp_dirpath  "../pseudos/PBE-FR"
natom       1
typat       1
xred        0 0 0
acell       6.2600834178  6.2600834178  6.2600834178  Bohr
rprim      -0.5 0.5 0.5   0.5 -0.5 0.5   0.5 0.5 -0.5

# k-point grid
kptopt      1           # use irreducible BZ by default
nshiftk     1
shiftk      0 0 0       # Use a centered grid

# Spin-orbit coupling
nsppol      1
nspinor     2
nspden      1

# Electron states
ecut        42 Ha
occopt      4
nband       18
tsmear      0.009 Ha


#=========================================================================================
# DATASET 1 : Ground state density and wavefunction
#=========================================================================================

ngkpt1      18 18 18
prtden1     1
prtwf1      1

# get first guess from output of relaxation
getden_filepath1 "./save/ngk18_dfe8_DEN"
getwfk_filepath1 "./save/ngk18_dfe8_WFK"


#=========================================================================================
# DATASET 2 : Electronic bands
#=========================================================================================

iscf2      -2
getden2     1
getwfk2     1
prtebands2  2           # print bands as .data file
ndivsm2     60
kptopt2    -5
kptbounds2
    0    0    0         # Gamma
   -0.5  0.5  0.5       # H
    0    0.5  0         # N
    0    0    0         # Gamma
    0.25 0.25 0.25      # P
   -0.5  0.5  0.5       # H


#=========================================================================================
# DATASET 3 : Fermi surface
#=========================================================================================

iscf3      -3
getden3     1
getwfk3     1
prtdos3     3           # print full and angular-momentum projected DOS
prtfsurf3   1
ngkpt3      36 36 36    # denser k-grid
