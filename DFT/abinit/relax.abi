prtgsr      0
prtkden     0
prtden      1
prtwf       1

# Atoms definition
ntypat      1
znucl       41
pseudos "Nb.psp8"
pp_dirpath "../pseudos/PBE-FR"

# Crystal definition
natom       1
typat       1
