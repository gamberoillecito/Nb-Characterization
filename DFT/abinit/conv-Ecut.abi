outdata_prefix "./out/ecut"

# Suppress some unused outputs
prtebands 0
prtddb 0
prtden 0
prteig 0
prtgsr 0
prtkden 0
prtwf 0

# Atoms definition
ntypat 1
znucl 41
pseudos "Nb.psp8"
pp_dirpath "../pseudos/PBE-FR"

# Crystal definition
natom 1
typat 1
xred 0 0 0
acell 0.33005 0.33005 0.33005 nm
rprim -0.5 0.5 0.5   0.5 -0.5 0.5   0.5 0.5 -0.5
kptopt 1
nshiftk 2
shiftk 0.25 0.25 0.25 -0.25 -0.25 -0.25

# Spin-orbit coupling
nsppol 1
nspinor 2
nspden 1

# Calculation params
toldfe 1e-08
nstep 40
occopt 4
nband 20
ngkpt 5 5 5
tsmear 0.01 Ha

# Define datasets 
ndtset 17
ecut1  36.0 Ha
ecut2  36.5 Ha
ecut3  37.0 Ha
ecut4  37.5 Ha
ecut5  38.0 Ha
ecut6  38.5 Ha
ecut7  39.0 Ha
ecut8  39.5 Ha
ecut9  40.0 Ha
ecut10 40.5 Ha
ecut11 41.0 Ha
ecut12 41.5 Ha
ecut13 42.0 Ha
ecut14 42.5 Ha
ecut15 43.0 Ha
ecut16 43.5 Ha
ecut17 44.0 Ha